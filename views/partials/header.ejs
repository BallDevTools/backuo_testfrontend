                    <% if (!walletAddress) { %>
                        <button id="connect-wallet-btn" class="btn btn-primary">
                            <i class="fas fa-wallet"></i> เชื่อมต่อกระเป๋า
                        </button>
                    <% } else { %>
                        <span id="wallet-address" class="btn btn-secondary">
                            <i class="fas fa-wallet"></i> <%= walletAddress.substring(0, 6) %>...
                            <%= walletAddress.substring(walletAddress.length - 4) %>
                        </span>
                    <% } %>
                </div>
            </div>
            
            <!-- แสดงข้อความแจ้งเตือน -->
            <% if(success_msg != ''){ %>
                <div class="alert alert-success">
                    <%= success_msg %>
                </div>
            <% } %>
            
            <% if(error_msg != ''){ %>
                <div class="alert alert-danger">
                    <%= error_msg %>
                </div>
            <% } %>
    <% } else { %>
