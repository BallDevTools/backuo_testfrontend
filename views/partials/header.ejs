            </div>
        </nav>
        
        <!-- แสดงข้อความแจ้งเตือน -->
        <div class="container mt-3">
            <% if(success_msg != ''){ %>
                <div class="alert alert-success">
                    <%= success_msg %>
                </div>
            <% } %>
            
            <% if(error_msg != ''){ %>
                <div class="alert alert-danger">
