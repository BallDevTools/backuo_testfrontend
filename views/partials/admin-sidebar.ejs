<!-- views/partials/admin-sidebar.ejs - เมนูด้านข้างสำหรับแอดมิน -->
<div class="dashboard-sidebar">
    <div class="dashboard-brand">
        <img src="/img/logo.png" alt="Crypto Membership NFT Logo">
        <div class="dashboard-brand-name">Crypto Membership</div>
    </div>
    
    <div class="dashboard-user">
        <div class="dashboard-user-avatar">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="dashboard-user-name"><%= user.username %></div>
        <div class="dashboard-user-role">แอดมิน</div>
    </div>
    
    <nav class="dashboard-nav">
        <div class="dashboard-nav-item">
            <a href="/admin/dashboard" class="dashboard-nav-link <%= title === 'แดชบอร์ดแอดมิน' ? 'active' : '' %>">
                <i class="fas fa-tachometer-alt dashboard-nav-icon"></i>
                แดชบอร์ด
            </a>
        </div>
        <div class="dashboard-nav-item">
            <a href="/admin/plans" class="dashboard-nav-link <%= title === 'จัดการแพลน' ? 'active' : '' %>">
                <i class="fas fa-layer-group dashboard-nav-icon"></i>
                จัดการแพลน
            </a>
        </div>
        <div class="dashboard-nav-item">
            <a href="/admin/members" class="dashboard-nav-link <%= title === 'จัดการสมาชิก' ? 'active' : '' %>">
                <i class="fas fa-users dashboard-nav-icon"></i>
                จัดการสมาชิก
            </a>
        </div>
        <div class="dashboard-nav-item">
            <a href="/admin/finance" class="dashboard-nav-link <%= title === 'จัดการการเงิน' ? 'active' : '' %>">
                <i class="fas fa-money-bill-wave dashboard-nav-icon"></i>
                จัดการการเงิน
            </a>
        </div>
        <div class="dashboard-nav-item">
            <a href="/admin/settings" class="dashboard-nav-link <%= title === 'ตั้งค่าระบบ' ? 'active' : '' %>">
                <i class="fas fa-cog dashboard-nav-icon"></i>
                ตั้งค่าระบบ
            </a>
        </div>
        <div class="dashboard-nav-item">
            <a href="/auth/logout" class="dashboard-nav-link">
                <i class="fas fa-sign-out-alt dashboard-nav-icon"></i>
                ออกจากระบบ
            </a>
        </div>
    </nav>
</div>